{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 150,
  "config": {
    "axis": {
      "labelFontSize": 12,
      "labelLimit": 100
    },
    "legend": {
      "labelFontSize": 12
    }
  },
  "data": { "values": [] },
  "encoding": {
    "x": {
      "field": "value",
      "title": null,
      "scale": {
        "domain": [0, 100]
      }
    },
    "y": {
      "field": "gebied",
      "title": null,
      "sort": { "order": "descending" }
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": { "aggregate": "sum", "field": "value", "title": null },
        "y": { "field": "gebied", "title": "Gebied" },
        "color": {
          "field": "key",
          "title": "Legenda",
          "legend": {
            "orient": "top-left",
            "direction": "horizontal",
            "offset": -40
          }
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "baseline": "middle",
        "fontSize": 12
      },
      "encoding": {
        "text": { "field": "value", "type": "nominal" },
        "x": {
          "field": "position",
          "type": "quantitative"
        },
        "y": {
          "field": "gebied",
          "type": "nominal"
        },
        "color": {
          "condition": {
            "test": {
              "field": "color",
              "oneOf": ["#004699", "#787878", "#00A03C", "#FF0000"]
            },
            "value": "#FFFFFF"
          },
          "value": "#000000"
        }
      }
    }
  ]
}
