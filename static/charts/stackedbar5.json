{
  "$schema": "https://vega.github.io/schema/vega/v3.json",
  "width": 500,
  "height": 200,
  "padding": 5,

  "data":
    {
      "name": "table",
      "values": [
        {"x": 0, "y": 28, "variable":0}, {"x": 0, "y": 55, "variable":1},
        {"x": 1, "y": 43, "variable":0}, {"x": 1, "y": 91, "variable":1},
        {"x": 2, "y": 81, "variable":0}, {"x": 2, "y": 53, "variable":1},
        {"x": 3, "y": 19, "variable":0}, {"x": 3, "y": 87, "variable":1},
        {"x": 4, "y": 52, "variable":0}, {"x": 4, "y": 48, "variable":1},
        {"x": 5, "y": 24, "variable":0}, {"x": 5, "y": 49, "variable":1},
        {"x": 6, "y": 87, "variable":0}, {"x": 6, "y": 66, "variable":1},
        {"x": 7, "y": 17, "variable":0}, {"x": 7, "y": 27, "variable":1},
        {"x": 8, "y": 68, "variable":0}, {"x": 8, "y": 16, "variable":1},
        {"x": 9, "y": 49, "variable":0}, {"x": 9, "y": 15, "variable":1}
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": ["x"],
          "sort": {"field": "variable"},
          "field": "y"
        }
      ]
    }
  ,

  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {"data": "table", "field": "x"}
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true, "zero": true,
      "domain": {"data": "table", "field": "y1"}
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {"data": "table", "field": "variable"}
    }
  ],

  "legends": [
    {
      "fill": "color",
      "title": "",
      "orient": "right",
      "encode": {
        "symbols": {
          "enter": {
          }
        },
        "labels": {
          "update": {
            "text": {"field": "value"}
          }
        }
      }
    }
  ],

  "axes": [
    {"orient": "bottom", "scale": "x", "zindex": 1},
    {"orient": "left", "scale": "y", "zindex": 1}
  ],

  "marks": [
    {
      "type": "rect",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "x"},
          "width": {"scale": "x", "band": 1, "offset": -1},
          "y": {"scale": "y", "field": "y0"},
          "y2": {"scale": "y", "field": "y1"},
          "fill": {"scale": "color", "field": "variable"}
        },
        "update": {
          "fillOpacity": {"value": 1}
        },
        "hover": {
          "fillOpacity": {"value": 0.5}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "table"},
      "interactive": false,
      "encode": {
        "enter": {
          "text": {"field": "y"},
          "x": {"scale": "x", "field": "x"},
          "y": {"scale": "y", "field": "y0"},
          "dx": {"value": 30},
          "dy": {"value": -5 },
          "align": {"value": "left"},
          "baseline": {"value": "bottom"}
        }
      }
    }
  ]
}
